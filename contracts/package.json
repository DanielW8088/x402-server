{
  "name": "x402-mint-token-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for x402 token minting",
  "scripts": {
    "compile": "hardhat compile",
    "deploy:sepolia": "hardhat run scripts/deployToken.js --network baseSepolia",
    "deploy:mainnet": "hardhat run scripts/deployToken.js --network base",
    "deploy:launchtool:sepolia": "hardhat run scripts/deployLaunchTool.js --network baseSepolia",
    "deploy:launchtool:mainnet": "hardhat run scripts/deployLaunchTool.js --network base",
    "grant:sepolia": "hardhat run scripts/grantMinterRole.js --network baseSepolia",
    "grant:mainnet": "hardhat run scripts/grantMinterRole.js --network base",
    "check:sepolia": "hardhat run scripts/checkMinterRole.js --network baseSepolia",
    "check:mainnet": "hardhat run scripts/checkMinterRole.js --network base",
    "withdraw:sepolia": "hardhat run scripts/withdrawUSDC.js --network baseSepolia",
    "withdraw:mainnet": "hardhat run scripts/withdrawUSDC.js --network base",
    "verify": "hardhat verify --network baseSepolia"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "dotenv": "^16.4.7",
    "hardhat": "^2.22.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.4"
  }
}
